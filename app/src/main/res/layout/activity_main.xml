<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="jrl.acdat.quiniela.MainActivity">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
                android:text="XML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdbXml" />

        <RadioButton
                android:text="JSON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdbJson"
                android:checked="true" />
    </RadioGroup>

    <TextView
        android:text="Resultados:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvResultados"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtResultados"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="Apuestas:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvApuestas"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtApuestas"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Aciertos y premios:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvAciertosYPremios"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtAciertosYPremios"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnCalcular" />
</LinearLayout>
